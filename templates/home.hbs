<!-- Home -->
{{>header}}
<section id="viewCatalog" class="background-img">
    {{#if isLoggedIn}}
    <div class="added-destinations">
        {{#each offers}}
        <a href="/details/{{productId}}" class="added-destination">
            <img src="{{imgUrl}}" class="picture-added-destination">
            <h3>{{destination}}</h3>
            <span>to {{city}}</span><span>{{deparatureDate}}</span>
        </a>
        {{/each}}
    </div>
    {{else}}
    <div class="guest">
        No destinations possible! Please sign in...
    </div>
    {{/if}}
</section>
{{>footer}}